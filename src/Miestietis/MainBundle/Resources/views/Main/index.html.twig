            <h1 class="text-center title" id="list">Miesto problemos</h1>
            <div class="separator"></div>
            <p class="lead text-center">Naršykite. Pridėkite. Balsuokite.<br> Prisijunkite!</p>
            <br>
            <div class="row object-non-visible" data-animation-effect="fadeIn">
                <div class="col-md-12">

                    <!-- isotope filters start -->
                    <div class="filters text-center">
                        <ul class="nav nav-pills">
                            <li class="active"><a href="#" data-filter="*">Visi</a></li>
                            <li><a href="#" data-filter=".problemos">Problemos</a></li>
                            <li><a href="#" data-filter=".iniciatyvos">Iniciatyvos</a></li>
                        </ul>
                    </div>
                    <!-- isotope filters end -->

                    <!-- list items start -->
                    <div class="isotope-container row grid-space-20">

                    {% for problema in problems %}
                        <div class="col-sm-6 col-md-6 isotope-item problemos">
                            <div class="image-box">
                                <div class="overlay-container">
                                    <img src="{{ asset('public/images/problemos/' ~ problema.picture)}}" alt="">
                                    <a class="overlay" data-toggle="modal" data-target="#project-1">
                                        <i class="fa fa-search-plus"></i>

                                    </a>
                                </div>
                                <a class="btn btn-default btn-block" data-toggle="modal" data-target="#project-1">{{ problema.name() }}</a>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="project-1" tabindex="-1" role="dialog" aria-labelledby="project-1-label" aria-hidden="true">
                                <div class="modal-dialog modal-lg">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Uždaryti</span></button>
                                            <h4 class="modal-title" id="project-1-label">Problemos/iniciatyvos pavadinimas</h4>
                                        </div>
                                        <div class="modal-body">
                                            {#<h3>Problemos/iniciatyvos aprašymas</h3>#}
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <img src="{{  asset('public/images/problemos/' ~ problema.picture()) }}" alt="">
                                                </div>
                                                <div class="col-md-6">
                                                    <p>Įkelta: {{ problema.date() }}</p>
                                                    <p>{{ problema.description() }}</p>
                                                    <p>Pritaria: {{ problema.votes() }}</p>
                                                    <button type="button" class="btn btn-xs btn-primary">Pritariu!</button>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-sm btn-primary"><b>skelbti iniciatyvą!</b></button>
                                            <button type="button" class="btn btn-sm btn-default">Papildyti</button>
                                            <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Uždaryti</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}



