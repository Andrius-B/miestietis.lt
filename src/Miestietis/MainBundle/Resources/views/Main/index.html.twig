{% extends "::base.html.twig" %}

{% block title %}Miestietis.lt{% endblock %}

{% block navigation %}{% endblock %}

{% block body %}

    <!-- banner start -->
    <!-- ================ -->
    <div id="banner" class="banner">
        {{ include('banner.html.twig') }}
    </div>
    <!-- banner end -->

    <!-- section list start -->
    <!-- ================ -->
    <div class="section">
        <div class="container">
            <h1 class="text-center title" id="list">Miesto problemos ir iniciatyvos</h1>
            <div class="separator"></div>
            <p class="lead text-center">Naršykite. Pridėkite. Balsuokite.<br> Prisijunkite!</p>
            <br>
            <div class="row object-non-visible" data-animation-effect="fadeIn">
                <div class="col-md-12">
                    <!-- isotope filters start -->
                    <div class="filters text-center filters-main">
                        <ul class="nav nav-pills nav-main">
                            <li><a href="#" data-filter=".initiatives"class="problemFilterButton">Iniciatyvos</a></li>
                        </ul>
                    </div>
                    <!-- isotope filters end -->

                    <!-- list items start -->
                    <div class="isotope-container row grid-space-20" id="theContainerOfItems">
                        {% for initiative in initiatives %}
                            {{ include('initiatives.html.twig') }}
                        {% endfor %}
                    </div>
                    <!-- list items end -->
                    {{ include('confirmJoin.html.twig') }}
                    <div class="text-center">
                        <a href="#">
                            <input type="submit" value="Daugiau..." class="btn btn-default" url="{{ path('ajax_load_more_items') }}"id="addMoreItems">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- section end -->

    {{ include('add.html.twig') }}

    {{ include('about.html.twig') }}

    {{ include('profile.html.twig') }}

{% endblock %}