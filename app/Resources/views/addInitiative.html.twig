<!-- Modal -->
<div class="modal fade" id="addInitiative" tabindex="-1" role="dialog" aria-labelledby="add-label" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Uždaryti</span>
                </button>
                <h4 class="modal-title" id="add-label">Įkelti Iniciatyvą</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="footer-content">
                                {{ form_start(initiativeForm) }}
                            <div class="form-group has-feedback">
                                {{ form_widget(initiativeForm.description, { 'attr':{'class':'form-control', 'placeholder':"Iniciatyvos aprašymas", 'rows':"8"}})}}
                            </div>
                            <div class="form-group has-feedback">
                                {{ form_label(initiativeForm.initiative_date) }}
                                {{ form_widget(initiativeForm.initiative_date) }}
                            </div>
                            <div id="footer-form">
                          </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group has-feedback">
                    {{ form_widget(initiativeForm.save, { 'attr':{'class':'btn btn-default'}}) }}
                </div>
                {{ form_end(initiativeForm) }}
            </div>
        </div>
    </div>
</div>
<!-- Modal end -->
