<!-- Modal -->
<div class="modal fade" id="addInitiative" tabindex="-1" role="dialog" aria-labelledby="add-label" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" id="initiativeClose" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Uždaryti</span>
                </button>
                <h4 class="modal-title" id="add-label">Įkelti Iniciatyvą</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="footer-content">
                                {{ form_start(initiativeForm, {'attr':{'novalidate': 'novalidate'}}) }}
                            <div class="form-group has-feedback" id="initiativeDescriptionDiv">
                                {{ form_widget(initiativeForm.description, {'id':'newDescription', 'attr':{'class':'form-control', 'placeholder':"Iniciatyvos aprašymas", 'rows':"8"}})}}
                            </div>
                            <div class="form-group form-group__mrgn has-feedback">
                                 {{ form_label(initiativeForm.initiative_date) }}
                                 <div class="form-group has-feedback" id="initiativeDateDiv">
                                     {{ form_widget(initiativeForm.initiative_date, {'id':'newDate', 'attr':{}}) }}
                                 </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer" id="ajimedakaqfn" url="{{ path('ajax_initiative') }}" probId=''>
                <div class="form-group form-group__mrgn has-feedback text-center">
                    {{ form_widget(initiativeForm.save, {'id':'submitButton', 'attr':{'class':'btn btn-default'}}) }}
                    <span id="initiativeError" class="label label-danger" aria-hidden="true"></span>
                </div>
                {{ form_end(initiativeForm) }}
            </div>
        </div>
    </div>
</div>
<!-- Modal end -->
